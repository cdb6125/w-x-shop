@import "../style/authorize.wxss";
/* 个人信息布局 */
.user-info {
  display: flex;
  flex-direction: row;
  background: white;
  margin: 20rpx 20rpx;
}

.user-info .left {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-info .right {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.user-info image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}